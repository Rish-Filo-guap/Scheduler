<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_shape"

    android:orientation="vertical"
    android:id="@+id/parainfo_linearLayout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="День недели"
            android:textSize="20sp"
            android:gravity="center"
            />



        <RadioGroup
            android:id="@+id/radioGroupDayPara"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            >

            <RadioButton
                android:id="@+id/radioButtonDayPara1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="пн" />
            <RadioButton
                android:id="@+id/radioButtonDayPara2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="вт" />
            <RadioButton
                android:id="@+id/radioButtonDayPara3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ср" />
            <RadioButton
                android:id="@+id/radioButtonDayPara4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="чт" />
            <RadioButton
                android:id="@+id/radioButtonDayPara5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="пт" />
            <RadioButton
                android:id="@+id/radioButtonDayPara6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="сб" />




        </RadioGroup>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Номер пары"
            android:textSize="20sp"
            android:gravity="center"
           />



        <RadioGroup
            android:id="@+id/radioGroupNumbPara"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            >

            <RadioButton
                android:id="@+id/radioButtonPara1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1" />
            <RadioButton
                android:id="@+id/radioButtonPara2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2" />
            <RadioButton
                android:id="@+id/radioButtonPara3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3" />
            <RadioButton
                android:id="@+id/radioButtonPara4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4" />
            <RadioButton
                android:id="@+id/radioButtonPara5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5" />
            <RadioButton
                android:id="@+id/radioButtonPara6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6" />
            <RadioButton
                android:id="@+id/radioButtonPara7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7" />



        </RadioGroup>

        <RadioGroup
            android:id="@+id/radioGroupWeekParity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_marginTop="8dp">

            <RadioButton
                android:id="@+id/radioButtonAllWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:text="Каждая" />


            <RadioButton
                android:id="@+id/radioButtonDownWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Четная"
                android:textColor="#7CA8EF" />

            <RadioButton
                android:id="@+id/radioButtonUpWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"

                android:text="Нечетная"
                android:textColor="#EF7C89" />


        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Аудитория:"
            android:labelFor="@+id/searchViewTitle"
            android:paddingBottom="4dp"/>

        <SearchView
            android:id="@+id/searchViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:queryHint="Введите номер аудитории..."
            android:iconifiedByDefault="false"
            android:focusable="false"
            />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/parainfo_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/buttonResetLesson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сбросить"
                android:layout_weight="1"
                android:layout_marginTop="16dp"
                android:textColor="#E23232"
                />
            <Button
                android:id="@+id/buttonSaveLesson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сохранить"
                android:layout_weight="1"
                android:layout_marginTop="16dp"/>


        </LinearLayout>

    </LinearLayout>



</LinearLayout>
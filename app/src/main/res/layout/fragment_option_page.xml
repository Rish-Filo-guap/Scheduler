<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scheduleViews.OptionPageFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        tools:ignore="UselessParent">


        <Button
            android:id="@+id/share_schedule_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="поделиться расписанием из первой вкладки" />

        <Button
            android:id="@+id/share_sec_schedule_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="поделиться расписанием из второй вкладки" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Расписание можно будет найти по коду:"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/copy_code_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:src="?attr/actionModeCopyDrawable"
                app:tint="@color/copyBtnTint" />

            <TextView
               android:paddingLeft="10dp"
                android:id="@+id/code_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Код: "
                android:textSize="35sp" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>
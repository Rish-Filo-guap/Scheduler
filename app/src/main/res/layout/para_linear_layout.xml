<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/main_para_layout"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingLeft="20dp"
            >

            <TextView  android:id="@+id/time_start_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/timeStartEnd"
                android:gravity="center"
                android:text="10:30"/>

            <TextView android:id="@+id/lesson_numb_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/lessonTextColor"
                android:textSize="29dp"
                android:gravity="center"
                android:text="5"/>

            <TextView android:id="@+id/time_end_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/timeStartEnd"
                android:gravity="center"
                android:text="10:30"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="30dp">

            <TextView android:id="@+id/type_subject_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"

                android:text="Лекциz"/>

            <TextView android:id="@+id/subject_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="физкультура"/>

            <TextView android:id="@+id/classroom_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/classroom"

                android:background="@drawable/background_for_classroom"

                android:text="33-08"/>

            <TextView android:id="@+id/teacher_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/groupPrep"

                android:text="Иванов И. И."/>

            <TextView android:id="@+id/group_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/groupPrep"

                android:text="4227"/>


        </LinearLayout>



    </LinearLayout>

